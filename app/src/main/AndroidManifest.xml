<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mcharmas.myapplication">

    <application
        android:name="pl.charmas.shoppinglist.ProductListApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name="pl.charmas.shoppinglist.view.products.ui.ProductListActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="pl.charmas.shoppinglist.view.products.ui.AddProductActivity" />

    </application>

</manifest>
